<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:background="@drawable/curve_grey_bg"
        android:layout_marginBottom="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/orphanage_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:text="@string/rumah_kasih_seksyen_7_shah_alam"
        app:layout_constraintStart_toStartOf="@id/view1"
        app:layout_constraintTop_toTopOf="@id/view1"/>
    <TextView
        android:id="@+id/created_updated_date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="3dp"
        android:textSize="12sp"
        android:text="@string/updated_on_3_jun_2022_at_13_25_myt"
        app:layout_constraintStart_toStartOf="@id/view1"
        app:layout_constraintTop_toBottomOf="@id/orphanage_name"/>
    <ImageView
        android:id="@+id/exclaimation_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/ic_exclaim_mark_green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/created_updated_date_time"/>
    <TextView
        android:id="@+id/title_stock_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/stock_out_in"
        app:layout_constraintStart_toEndOf="@id/exclaimation_icon"
        app:layout_constraintTop_toBottomOf="@id/created_updated_date_time"/>
    <TextView
        android:id="@+id/stock_out_day_value"
        android:text="@string/_1_day_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="3dp"
        android:textColor="@color/grey"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/title_stock_out"
        app:layout_constraintStart_toEndOf="@id/exclaimation_icon"
        app:layout_constraintTop_toBottomOf="@id/title_stock_out"/>
    <View
        android:id="@+id/vertical1"
        android:layout_width="1dp"
        android:layout_height="55dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/color_919498"
        app:layout_constraintStart_toEndOf="@id/title_stock_out"
        app:layout_constraintTop_toBottomOf="@id/created_updated_date_time"/>
    <TextView
        android:id="@+id/title_inventory_left"
        android:text="@string/inventory_left"
        android:layout_marginStart="10dp"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/vertical1"
        app:layout_constraintTop_toTopOf="@id/vertical1"/>
    <TextView
        android:id="@+id/inventory_value"
        android:text="@string/_87"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="3dp"
        android:textColor="@color/grey"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/title_inventory_left"
        app:layout_constraintStart_toEndOf="@id/vertical1"
        app:layout_constraintTop_toBottomOf="@id/title_inventory_left"/>
    <View
        android:id="@+id/vertical2"
        android:layout_width="1dp"
        android:layout_height="55dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/color_919498"
        app:layout_constraintStart_toEndOf="@id/title_inventory_left"
        app:layout_constraintTop_toBottomOf="@id/created_updated_date_time"/>
    <TextView
        android:id="@+id/title_total_amount"
        android:text="@string/total_item_needed"
        android:layout_marginStart="10dp"
        android:textAlignment="center"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/vertical2"
        app:layout_constraintTop_toTopOf="@id/vertical2"/>
    <TextView
        android:id="@+id/total_item_require"
        android:text="@string/_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="3dp"
        android:textColor="@color/grey"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/title_total_amount"
        app:layout_constraintStart_toEndOf="@id/vertical2"
        app:layout_constraintTop_toBottomOf="@id/title_total_amount"/>
</androidx.constraintlayout.widget.ConstraintLayout>